---
import WebsiteCard from '../components/WebsiteCard.astro';
import MainLayout from '../layouts/MainLayout.astro';
import websiteList from '../constants/portfolio-work.ts';
---

<MainLayout title="Kiri86 - Projectos">
  <div class="w-full flex flex-col gap-2 md:gap-3 lg:gap-4">
    <h2 class="font-bold text-2xl md:text-4xl text-blue-700">Mis Projectos</h2>
    <div
      class="grid w-full h-full lg:grid-cols-2 xl:grid-cols-3 items-center gap-y-4 md:gap-y-16 md:gap-x-8"
    >
      {
        websiteList.map((website) => {
          return <WebsiteCard portfolioItem={website} />;
        })
      }
    </div>
  </div>
</MainLayout>

<script>
  import '../scripts/work.ts';
</script>
